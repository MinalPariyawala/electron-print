{
  "name": "electron-print",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "ng:serve": "ng serve --port 4201 -c web",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4201 && npm run electron:serve-tsc && electron . --serve",
    "package": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder -p always",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "main": "desktop/main.js",
  "private": true,
  "build": {
    "appId": "com.print.app",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release/"
    },
    "files": [
      "**/*",
      "dist/**/*",
      "assets",
      "!.angular",
      "!.vscode",
      "!README.md",
      "!**/node_modules/.bin",
      "!logs",
      "!release",
      "!src",
      "!package.json",
      "!package-lock.json"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "dist/assets/images/icon/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "dist/assets/images/icon/favicon.ico",
      "uninstallerIcon": "dist/assets/images/icon/favicon.ico",
      "installerHeaderIcon": "dist/assets/images/icon/favicon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "icon": "src/assets/images/icon/appicon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@angular/animations": "^17.2.0",
    "@angular/common": "^17.2.0",
    "@angular/compiler": "^17.2.0",
    "@angular/core": "^17.2.0",
    "@angular/forms": "^17.2.0",
    "@angular/platform-browser": "^17.2.0",
    "@angular/platform-browser-dynamic": "^17.2.0",
    "@angular/router": "^17.2.0",
    "electron-log": "^5.1.2",
    "electron-root-path": "^1.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.1",
    "@angular/cli": "^17.2.1",
    "@angular/compiler-cli": "^17.2.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-electronyzer": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "typescript": "~5.3.2",
    "wait-on": "^7.2.0"
  }
}
